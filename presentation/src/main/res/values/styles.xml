<resources>

    <!-- Base application theme. -->
    <style name="Depot" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionButtonStyle">@style/Toolbar.ActionButton</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.NavigationIcon</item>
        <item name="android:actionOverflowButtonStyle">@style/Toolbar.Overflow</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!--<item name="colorControlNormal">@android:color/white</item>-->
        <!--<item name="colorControlActivated">@android:color/white</item>-->
        <item name="colorControlHighlight">@color/primary</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="RetryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar"></style>

    <style name="Toolbar.NavigationIcon"
        parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:scaleX">.75</item>
        <item name="android:scaleY">.75</item>
    </style>

    <style name="Toolbar.ActionButton"
        parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:scaleX">.75</item>
        <item name="android:scaleY">.75</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="Toolbar.Overflow"
        parent="@android:style/Widget.Holo.ActionButton.Overflow" >
        <item name="android:src">@drawable/ic_overflow</item>
        <item name="android:scaleX">.75</item>
        <item name="android:scaleY">.75</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DefaultCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="ArrivalList"></style>

    <style name="ArrivalList.Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ArrivalList.HeaderButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:tint">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:scaleX">.75</item>
        <item name="android:scaleY">.75</item>
        <item name="android:background">@drawable/press_dependent_button_primary</item>
    </style>

    <style name="ArrivalItem"></style>

    <style name="ArrivalItem.RouteName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/arrival_route_name_weight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ArrivalItem.DestinationName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/arrival_destination_name_weight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArrivalItem.MinutesUntilArrival">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArrivalItem.ArrivalTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="MapSearch"></style>

    <style name="MapSearch.Text">
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="MapSearch.Text.WithIcon">
        <item name="android:paddingTop">0dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MapSearch.TextButton" parent="MapSearch.Text">
        <item name="android:textColor">@color/press_dependent_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="SavedStops"></style>

    <style name="SavedStops.DialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WidgetConfiguration"></style>

    <style name="WidgetConfiguration.CustomizeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="WidgetConfiguration.CustomizeStyle.TextLabel">

    </style>

    <style name="WidgetConfiguration.StepIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">.4</item>
        <item name="android:scaleY">.4</item>
        <item name="android:src">@drawable/ic_circle_filled</item>
    </style>

    <style name="WidgetConfiguration.Button">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:alpha">.70</item>
    </style>

    <style name="Widget.ArrivalText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/widget_arrival_default</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
