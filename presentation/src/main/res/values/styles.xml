<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionButtonStyle">@style/Toolbar.ActionButton</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.NavigationIcon</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Toolbar"></style>

    <style name="Toolbar.NavigationIcon"
        parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
    </style>

    <style name="Toolbar.ActionButton"
        parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ArrivalList"></style>

    <style name="ArrivalList.Headings">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ArrivalItem"></style>

    <style name="ArrivalItem.RouteName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/arrival_route_name_weight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArrivalItem.DestinationName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/arrival_destination_name_weight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArrivalItem.ArrivalTime">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/arrival_minutes_until_arrival_weight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>
